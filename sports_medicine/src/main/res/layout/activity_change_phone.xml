<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context="com.tianxiabuyi.sports_medicine.personal.ModifyPhoneActivity">

    <TextView
        style="@style/BlankLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            style="@style/BlackText_16sp"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_old_phone"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_confirm_phone"
            style="@style/BlackText_16sp"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="原手机号" />

        <EditText
            android:id="@+id/et_confirm_phone"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:id="@+id/ll_new_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            style="@style/BlackText_16sp"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="新手机号" />

        <EditText
            android:id="@+id/et_new_phone"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone" />
    </LinearLayout>

