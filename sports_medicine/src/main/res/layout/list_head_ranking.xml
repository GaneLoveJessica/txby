<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/blank"
        style="@style/BlankLine"
        android:background="#f1f0ee" />

    <TextView
        android:id="@+id/tv_ranking"
        style="@style/BlackText_18sp"
        android:layout_width="36dp"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/ranking_avatar"
        android:layout_height="@dimen/ranking_avatar"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/blank"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/avatar"
        android:layout_toRightOf="@+id/tv_ranking" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/Text_18sp"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_toLeftOf="@id/tv_step"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tv_step"
        style="@style/GrayText_18sp"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginRight="18dp"
        android:gravity="center" />

    <TextView
        style="@style/BlankLine"
        android:layout_below="@+id/iv_avatar"
        android:background="#f1f0ee" />
</RelativeLayout>