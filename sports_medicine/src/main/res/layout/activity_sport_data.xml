<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sport_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.tianxiabuyi.sports_medicine.personal.personal_c.activity.SportDataActivity">

    <TextView
        style="@style/BlackText_16sp"
        android:padding="8dp"
        android:text="今天"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/WhiteText_18sp"
                    android:text="步数" />

                <TextView
                    android:id="@+id/tv_step"
                    style="@style/WhiteText_18sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="0步" />
            </LinearLayout>

            <View
                style="@style/HorizontalLine"
                android:background="@android:color/white" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_show_all_data"
        android:layout_width="match_parent"
        android:text="@string/show_all_data"
        android:padding="12dp"
        style="@style/BlackText_18sp"
        android:drawableRight="@mipmap/detail"/>

    <TextView
        style="@style/HorizontalLine"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blank"/>
</LinearLayout>
