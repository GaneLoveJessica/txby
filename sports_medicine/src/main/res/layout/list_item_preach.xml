<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/ll_love"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/loading" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/BlackText_16sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/iv_image"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="2" />

    <TextView
        android:id="@+id/tv_browse"
        style="@style/GrayText_14sp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_image"
        android:text="0阅读" />

    <LinearLayout
        android:id="@+id/ll_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@mipmap/heart" />

        <TextView
            android:id="@+id/tv_love_number"
            style="@style/GrayText_14sp"
            android:text="0次" />
    </LinearLayout>

    <TextView
        style="@style/BlankLine"
        android:layout_height="8dp"
        android:layout_below="@id/ll_love"
        android:layout_marginTop="12dp" />
</RelativeLayout>
