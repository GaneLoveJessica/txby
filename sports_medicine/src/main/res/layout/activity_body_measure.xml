<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.tianxiabuyi.sports_medicine.personal.personal_c.activity.PersonalInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BlackText_16sp"
            android:padding="12dp"
            android:text="年龄" />

        <EditText
            android:id="@+id/et_age"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:enabled="false"
            android:gravity="end"
            android:hint="@string/unset"
            android:inputType="number"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BlackText_16sp"
            android:padding="12dp"
            android:text="性别" />

        <TextView
            android:id="@+id/et_gender"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:enabled="false"
            android:gravity="end"
            android:hint="@string/unset"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BlackText_16sp"
            android:padding="12dp"
            android:text="身高(cm)" />

        <EditText
            android:id="@+id/et_height"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:enabled="false"
            android:gravity="end"
            android:hint="@string/unset"
            android:inputType="number"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BlackText_16sp"
            android:padding="12dp"
            android:text="体重(kg)" />

        <EditText
            android:id="@+id/et_weight"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:enabled="false"
            android:gravity="end"
            android:hint="@string/unset"
            android:inputType="number"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BlackText_16sp"
            android:padding="12dp"
            android:text="腰围(cm)" />

        <EditText
            android:id="@+id/et_waistline"
            style="@style/Text_16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:enabled="false"
            android:gravity="end"
            android:hint="@string/unset"
            android:inputType="number"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView style="@style/BlankLine" />

        <TextView
            style="@style/BlackText_18sp"
            android:padding="12dp"
            android:text="根据您所填的数据，您的测评结果如下：" />

        <TextView style="@style/HorizontalLine" />

        <TextView
            android:id="@+id/tv_result"
            style="@style/Text_16sp"
            android:lineSpacingExtra="6dp"
            android:padding="12dp" />
    </LinearLayout>

</LinearLayout>
